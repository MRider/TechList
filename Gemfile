  gem 'debugger'
  gem 'rspec-rails'
  gem 'capybara', :git => 'git://github.com/jnicklas/capybara.git'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'ffaker'
end

group :test do
  gem 'cucumber'
  gem 'cucumber-rails', :require => false
  gem 'rspec'
  gem 'shoulda-matchers'
  gem 'database_cleaner'
end

gem 'jquery-rails'
